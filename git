#!/usr/bin/env ruby

require 'drb/drb'

NETWORK_COMMANDS = %w(pull clone fetch push)
HOSTS = {
  'git.debian.org' => :debian,
  'anongit.kde.org' => :kde
}
SERVER_URI = 'druby://localhost:991235'

def run(args)
  system('/usr/bin/git', *args)
  $?.exitstatus
end

DRb.start_service
monitor = DRbObject.new_with_uri(SERVER_URI)

# Only sync network-io commands. Local commands do not benefit from being
# locked which in turn only slows down the entire affair by an incredible
# amount.
synchronize = false
NETWORK_COMMANDS.each do |c|
  synchronize = true && break if ARGV.include?(c)
end

exit_code = 0
if synchronize
  host = nil
  HOSTS.each { |h, sym| host = sym && break if ARGV.join.include?(h) }
  monitor.synchronize(Process.pid, host) do
    exit_code = run(ARGV)
  end
else
  exit_code = run(ARGV)
end

exit exit_code
